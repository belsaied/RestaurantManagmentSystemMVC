@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center text-white fw-bold"
             style="background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);">
            <h2 class="m-0 d-flex align-items-center gap-2">
                <i class="bi bi-person-gear"></i> All Roles
            </h2>

            <a asp-action="AddRole" asp-controller="Role" class="btn btn-light fw-semibold text-orange d-flex align-items-center gap-2"
               style="color: #ff6600; border: 2px solid #fff; border-radius: 8px;">
                <i class="bi bi-plus-circle-fill"></i> Add New Role
            </a>
        </div>

        <div class="card-body bg-light">
            <table class="table table-hover align-middle">
                <thead style="background-color: #ff8c00; color: white;">
                    <tr>
                        <th scope="col">Role Id</th>
                        <th scope="col">Role Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr class="table-row">
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .table-row:hover {
        background-color: rgba(255, 140, 0, 0.1);
        transition: background-color 0.3s ease;
    }

    table th, table td {
        vertical-align: middle;
        text-align: center;
    }

    .card-body {
        border-top: 1px solid #eee;
    }

    .btn-light:hover {
        background-color: #ff6600 !important;
        color: white !important;
        border-color: #ff6600 !important;
        transform: translateY(-1px);
        transition: all 0.3s ease;
    }
</style>
