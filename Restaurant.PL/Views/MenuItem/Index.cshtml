@model IEnumerable<GetAllMenuItemsDto>
@inject ICategoryService _categoryService
@{
    ViewData["Title"] = "All Menu Items";
    Layout = "_Layout";
}

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    var messageType = TempData["MessageType"] as string ?? "success";
    var headerText = messageType == "success" ? "Success!!" : "Error!!";
    var headerClass = messageType == "success" ? "text-success" : "text-danger";
    var toastClass = messageType == "success" ? "bg-success text-white" : "bg-danger text-white";

    <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 9999;">
        <div id="notificationToast" class="toast @toastClass" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
            <div class="toast-header">
                <strong class="me-auto @headerClass">@headerText</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Message"]
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toastElement = document.getElementById('notificationToast');
            if (toastElement) {
                var toast = new bootstrap.Toast(toastElement);
                toast.show();
            }
        });
    </script>
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1" style="font-weight: 700; color: #2c3e50;">Menu Items</h1>
            <p class="text-muted mb-0">Manage your restaurant's menu offerings</p>
        </div>
        <a class="btn btn-primary" asp-controller="MenuItem" asp-action="Create" style="padding: 12px 28px; border-radius: 8px; font-weight: 600; box-shadow: 0 2px 8px rgba(0,123,255,0.3);">
            <i class="bi bi-plus-circle me-2"></i>Add New Item
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var menuItem in Model)
            {
                var allCategories = _categoryService.GetAllCategories();
                var categoryName = allCategories.FirstOrDefault(c => c.Id == menuItem.CategoryId)?.CategoryName ?? "Unknown";

                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card h-100 shadow-sm border-0" style="border-radius: 16px; overflow: hidden; transition: all 0.3s ease;">
                        <div class="position-relative" style="height: 200px; overflow: hidden; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            @if (!string.IsNullOrEmpty(menuItem.ImageName))
                            {
                                <img src="~/Files/MenuItems/@menuItem.ImageName"
                                     alt="@menuItem.ItemName"
                                     class="w-100 h-100"
                                     style="object-fit: cover;"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                <div class="d-none align-items-center justify-content-center h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="bi bi-image" style="font-size: 3rem; color: white; opacity: 0.5;"></i>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <i class="bi bi-image" style="font-size: 3rem; color: white; opacity: 0.5;"></i>
                                </div>
                            }

                            <div class="position-absolute top-0 end-0 m-3">
                                <form method="post" asp-action="ToggleAvailability" asp-route-id="@menuItem.Id" style="display: inline;">
                                    @if (menuItem.IsAvailable)
                                    {
                                        <button type="submit" class="btn btn-sm btn-success shadow-sm" style="border-radius: 20px; padding: 6px 14px; font-weight: 600; border: 2px solid white;">
                                            <i class="bi bi-check-circle-fill me-1"></i>Available
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-secondary shadow-sm" style="border-radius: 20px; padding: 6px 14px; font-weight: 600; border: 2px solid white;">
                                            <i class="bi bi-x-circle-fill me-1"></i>Unavailable
                                        </button>
                                    }
                                </form>
                            </div>

                            <div class="position-absolute bottom-0 start-0 m-3">
                                <span class="badge" style="background-color: rgba(255,255,255,0.95); color: #2c3e50; padding: 8px 14px; border-radius: 8px; font-weight: 600; font-size: 0.85rem;">
                                    @categoryName
                                </span>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column" style="padding: 20px;">
                            <div class="mb-3">
                                <h5 class="card-title mb-2" style="font-weight: 700; color: #2c3e50; font-size: 1.1rem;">
                                    @menuItem.ItemName
                                </h5>

                                @if (!string.IsNullOrEmpty(menuItem.Description))
                                {
                                    <p class="card-text text-muted mb-2" style="font-size: 0.9rem; line-height: 1.5; min-height: 40px;">
                                        @(menuItem.Description.Length > 60 ? menuItem.Description.Substring(0, 60) + "..." : menuItem.Description)
                                    </p>
                                }
                                else
                                {
                                    <p class="card-text text-muted mb-2" style="font-size: 0.9rem; font-style: italic; min-height: 40px;">
                                        No description available
                                    </p>
                                }

                                <div class="d-flex align-items-center mb-3">
                                    <span style="font-size: 1.5rem; font-weight: 700; color: #28a745;">
                                        @menuItem.Price.ToString("C")
                                    </span>
                                </div>
                            </div>

                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@menuItem.Id" style="border-radius: 8px 0 0 8px; font-weight: 500;">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@menuItem.Id" style="border-radius: 0; font-weight: 500;">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@menuItem.Id" style="border-radius: 0 8px 8px 0; font-weight: 500;">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-light border-0" style="padding: 12px 20px;">
                            <small class="text-muted d-flex align-items-center">
                                <i class="bi bi-calendar3 me-2"></i>
                                Created: @(menuItem.CreatedOn?.ToString("MMM dd, yyyy") ?? "N/A")
                            </small>
                        </div>
                    </div>

                    <div class="modal fade" id="deleteModal-@menuItem.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@menuItem.Id" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content" style="border-radius: 16px; border: none; overflow: hidden;">
                                <div class="modal-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; border: none;">
                                    <h5 class="modal-title" id="deleteModalLabel-@menuItem.Id" style="font-weight: 600;">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="padding: 28px;">
                                    <p class="mb-2" style="font-size: 1.05rem;">Are you sure you want to delete:</p>
                                    <p class="fw-bold mb-3" style="font-size: 1.15rem; color: #dc3545;">"@menuItem.ItemName"?</p>
                                    <div class="alert alert-warning d-flex align-items-center mb-0" style="border-radius: 8px;">
                                        <i class="bi bi-info-circle me-2"></i>
                                        <small>This action cannot be undone.</small>
                                    </div>
                                </div>
                                <div class="modal-footer" style="border-top: 1px solid #e9ecef; padding: 16px 28px;">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 8px; padding: 8px 20px; font-weight: 500;">
                                        <i class="bi bi-x-circle me-1"></i>Cancel
                                    </button>
                                    <form method="post" asp-action="Delete" asp-controller="MenuItem" asp-route-id="@menuItem.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger" style="border-radius: 8px; padding: 8px 20px; font-weight: 500;">
                                            <i class="bi bi-trash-fill me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-basket" style="font-size: 5rem; color: #dee2e6;"></i>
            </div>
            <h3 class="text-muted mb-3" style="font-weight: 600;">No Menu Items Found</h3>
            <p class="text-muted mb-4">Get started by adding your first menu item to your restaurant</p>
            <a class="btn btn-primary btn-lg" asp-controller="MenuItem" asp-action="Create" style="padding: 14px 36px; border-radius: 10px; font-weight: 600; box-shadow: 0 4px 12px rgba(0,123,255,0.3);">
                <i class="bi bi-plus-circle me-2"></i>Create First Menu Item
            </a>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.15) !important;
        }

    .btn-group .btn {
        font-size: 0.9rem;
    }

        .btn-group .btn:hover {
            transform: scale(1.02);
            z-index: 2;
        }
</style>