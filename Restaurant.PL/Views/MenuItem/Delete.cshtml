@model GetByIdMenuItemsDto
@{
    ViewData["Title"] = "Delete Menu Item";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger d-flex align-items-center" role="alert" style="border-radius: 12px; padding: 20px; margin-bottom: 24px;">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 2rem;"></i>
                <div>
                    <h4 class="alert-heading mb-2" style="font-weight: 600;">Warning!</h4>
                    <p class="mb-0">Are you sure you want to delete this menu item? This action cannot be undone.</p>
                </div>
            </div>

            <div class="card shadow-sm" style="border-radius: 12px; border: none;">
                <div class="card-header" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef; padding: 20px; border-radius: 12px 12px 0 0;">
                    <h2 class="mb-0 text-danger" style="font-weight: 600;">Delete Menu Item</h2>
                </div>
                <div class="card-body" style="padding: 30px;">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ImageUrl" alt="@Model.ItemName" class="img-fluid rounded" style="max-height: 300px; object-fit: cover; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);" />
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Item Name</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                @Model.ItemName
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Price</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef; font-weight: 600; color: #28a745;">
                                @Model.Price.ToString("C")
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Availability Status</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                @if (Model.IsAvailable)
                                {
                                    <span class="badge d-inline-flex align-items-center" style="background-color: #28a745; padding: 6px 12px; border-radius: 6px; font-size: 14px;">
                                        <i class="bi bi-check-circle-fill me-2"></i> Available
                                    </span>
                                }
                                else
                                {
                                    <span class="badge d-inline-flex align-items-center" style="background-color: #6c757d; padding: 6px 12px; border-radius: 6px; font-size: 14px;">
                                        <i class="bi bi-x-circle-fill me-2"></i> Unavailable
                                    </span>
                                }
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-6 mb-4">
                                <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Image URL</label>
                                <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @Model.ImageUrl
                                </div>
                            </div>
                        }
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <form method="post" asp-controller="MenuItem" asp-action="Delete" asp-route-id="@Model.Id">
                            <button type="submit" class="btn d-flex align-items-center" style="background-color: #dc3545; color: white; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 500;">
                                <i class="bi bi-trash-fill me-2"></i> Confirm Delete
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center" style="padding: 10px 24px; border-radius: 8px; font-weight: 500;">
                            <i class="bi bi-x-circle me-2"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>