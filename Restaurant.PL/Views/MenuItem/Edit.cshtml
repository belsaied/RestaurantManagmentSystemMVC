@model MenuItemsViewModel
@{
    ViewData["Title"] = "Edit Menu Item";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="border-radius: 12px; border: none;">
                <div class="card-header" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef; padding: 20px; border-radius: 12px 12px 0 0;">
                    <h2 class="mb-0" style="font-weight: 600;">Edit Menu Item</h2>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <form method="post" asp-controller="MenuItem" asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        @* CRITICAL: Ensure ALL these hidden fields are properly bound *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageName" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 8px;"></div>

                        <partial name="PartialView/_CreateEditMenuItemsPartialView" model="Model" />

                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-success" style="border: none; padding: 10px 24px; border-radius: 6px; font-weight: 500;">
                                <i class="bi bi-check-circle me-2"></i>Update
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="MenuItem" asp-action="Index" style="padding: 10px 24px; border-radius: 6px; font-weight: 500;">
                                <i class="bi bi-arrow-left me-2"></i>Back to list
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Debug: Log form data before submission
        document.querySelector('form').addEventListener('submit', function(e) {
            console.log('Form submitting...');
            console.log('Id:', document.querySelector('[name="Id"]')?.value);
            console.log('ItemName:', document.querySelector('[name="ItemName"]')?.value);
            console.log('CategoryId:', document.querySelector('[name="CategoryId"]')?.value);
            console.log('ImageName:', document.querySelector('[name="ImageName"]')?.value);
        });
    </script>
}