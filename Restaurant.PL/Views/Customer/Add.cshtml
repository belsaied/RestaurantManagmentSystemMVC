@using Restaurant.BLL.DTOs.CustomerDTOs
@model CreateCustomerDTO

@{
    ViewData["Title"] = "Add Customer";
}

@section Styles {
    <style>
        .preview {
            width: 140px;
            height: 140px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .hint {
            font-size: .9rem;
            opacity: .8;
        }

        .card-header {
            background: #ff6600;
            color: #fff;
            font-weight: 600;
        }

        .btn-primary {
            background-color: #ff6600;
            border-color: #ff6600;
        }

            .btn-primary:hover {
                background-color: #e65c00;
                border-color: #e65c00;
            }
    </style>
}

<h1 class="mb-3">Add Customer</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">Customer Information</div>
            <div class="card-body">
                <!-- مهم: تمكين رفع الملفات -->
                <form asp-controller="Customer" asp-action="Add" method="post" enctype="multipart/form-data" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="e.g., Ahmed" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="e.g., Gamal" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="+201234567890" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- حقل رفع الصورة -->
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Profile Image</label>
                        <input asp-for="Image" class="form-control" type="file" accept="image/*" />
                        <div class="hint">المدعوم: .jpg .jpeg .png — حد أقصى 2MB (زي ما محدد في الـAttachmentService).</div>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <!-- معاينة -->
                    <img id="imgPreview" class="preview d-none" alt="Preview" />

                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const fileInput = document.querySelector('input[name="Image"]');
        const preview   = document.getElementById('imgPreview');
        fileInput?.addEventListener('change', (e) => {
            const f = e.target.files?.[0];
            if (!f) { preview.classList.add('d-none'); return; }
            const url = URL.createObjectURL(f);
            preview.src = url;
            preview.classList.remove('d-none');
        });
    </script>
}
