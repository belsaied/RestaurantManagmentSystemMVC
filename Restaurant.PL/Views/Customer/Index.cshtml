@using Restaurant.BLL.DTOs.CustomerDTOs
@model IEnumerable<CustomerDTO>

@{
    ViewData["Title"] = "Customers";
}

@section Styles {
    <style>
        /* Orange & White look to match your layout */
        .table thead th {
            background: #ff6600;
            color: #fff;
        }

        .btn-primary {
            background-color: #ff6600;
            border-color: #ff6600;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background-color: #e65c00;
                border-color: #e65c00;
            }

        .table tbody tr:hover {
            background: #fff6ee;
        }
    </style>
}

<h1 class="mb-3">Customers</h1>

<p>
    <a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Points</th>
            <th>Active?</th>
            <th>Created On</th>
            <th>Deleted?</th>
            <th class="text-center" style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            var list = Model ?? Enumerable.Empty<CustomerDTO>();
        }
        @foreach (var item in list)
        {
            // Try to resolve Id from DTO or from ViewBag.GetId
            var type = item?.GetType();
            var idProp = type?.GetProperty("Id");
            var rawId = idProp != null ? idProp.GetValue(item) : (ViewBag?.GetId != null ? ViewBag.GetId(item) : null);
            var idVal = 0;
            if (rawId is int iv) { idVal = iv; }
            else if (rawId != null) { int.TryParse(rawId.ToString(), out idVal); }

            <tr>
                <td>@(i++)</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.LoyaltyPoints</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>@(item.CreatedOn?.ToString("yyyy/MM/dd HH:mm") ?? "-")</td>
                <td>@(item.IsDeleted ? "Yes" : "No")</td>
                <td class="text-center">
                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@idVal" class="btn btn-sm btn-secondary me-1">Details</a>
                    <a asp-controller="Customer" asp-action="Update" asp-route-id="@idVal" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@idVal" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- keep validation/scripts from layout if needed -->
}
