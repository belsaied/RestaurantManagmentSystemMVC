@using Restaurant.BLL.DTOs.RecipeLinesDtos
@model IEnumerable<RecipeDto>
@{
    ViewData["Title"] = "Recipe Lines";
}

<div>
    <a asp-action="Create" class="btn btn-primary">Create Recipe Line</a>
</div>

<br />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No recipe lines found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.MenuItemName)</th>
                <th>@Html.DisplayNameFor(m => m.IngredientName)</th>
                <th>@Html.DisplayNameFor(m => m.Quantity)</th>
                <th>@Html.DisplayNameFor(m => m.Unit)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.MenuItemName</td>
                <td>@recipe.IngredientName</td>
                <td>@recipe.Quantity</td>
                <td>@recipe.Unit</td>
                <td>
                    <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info btn-sm me-1">Details</a>
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                    </td>
                    <td>
                    <form asp-action="Delete" asp-route-id="@recipe.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this recipe line?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}



