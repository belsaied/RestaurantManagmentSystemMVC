@model Restaurant.PL.ViewModels.RecipeLineVM.RecipeLineViewModel

@{
    ViewData["Title"] = "Create Recipe Line";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-plus-circle me-2"></i>Create Recipe Line
            </h1>
            <p class="page-subtitle">Define ingredient quantities for a menu item</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="border-radius: 16px;">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Menu Item Selection -->
                        <div class="mb-4">
                            <label asp-for="MenuId" class="form-label fw-semibold">
                                <i class="bi bi-card-list me-2"></i>Menu Item
                            </label>
                            <select asp-for="MenuId" class="form-select form-select-lg" id="menuItemSelect">
                                <option value="">-- Select Menu Item --</option>
                            </select>
                            <span asp-validation-for="MenuId" class="text-danger small"></span>
                        </div>

                        <!-- Ingredient Selection -->
                        <div class="mb-4">
                            <label asp-for="IngredientId" class="form-label fw-semibold">
                                <i class="bi bi-basket me-2"></i>Ingredient
                            </label>
                            <select asp-for="IngredientId" class="form-select form-select-lg" id="ingredientSelect">
                                <option value="">-- Select Ingredient --</option>
                            </select>
                            <span asp-validation-for="IngredientId" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Quantity" class="form-label fw-semibold">
                                    <i class="bi bi-hash me-2"></i>Quantity
                                </label>
                                <input asp-for="Quantity" class="form-control form-control-lg" 
                                       placeholder="Enter quantity" type="number" step="0.01" />
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>

                            <!-- Unit -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Unit" class="form-label fw-semibold">
                                    <i class="bi bi-rulers me-2"></i>Unit
                                </label>
                                <input asp-for="Unit" class="form-control form-control-lg" 
                                       placeholder="e.g., kg, liters, pieces" list="unitSuggestions" />
                                <datalist id="unitSuggestions">
                                    <option value="kg"></option>
                                    <option value="g"></option>
                                    <option value="ltr"></option>
                                    <option value="ml"></option>
                                    <option value="pcs"></option>
                                    <option value="oz"></option>
                                    <option value="cups"></option>
                                </datalist>

                                <span asp-validation-for="Unit" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 pt-3 border-top">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-check-circle me-2"></i>Create Recipe Line
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Populate Menu Items dropdown
        var menuItems = @Html.Raw(Json.Serialize(ViewBag.MenuItems));
        var menuSelect = document.getElementById('menuItemSelect');
        if (menuItems && menuItems.length > 0) {
            menuItems.forEach(function(item) {
                var option = document.createElement('option');
                option.value = item.id;
                option.text = item.itemName;
                menuSelect.appendChild(option);
            });
        }

        // Populate Ingredients dropdown
        var ingredients = @Html.Raw(Json.Serialize(ViewBag.Ingredients));
        var ingredientSelect = document.getElementById('ingredientSelect');
        if (ingredients && ingredients.length > 0) {
            ingredients.forEach(function(item) {
                var option = document.createElement('option');
                option.value = item.id;
                option.text = item.name;
                ingredientSelect.appendChild(option);
            });
        }
    </script>
}

<style>
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
    }

    .page-subtitle {
        color: #6c757d;
        margin: 0;
    }

    .form-label {
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #FFA500;
        box-shadow: 0 0 0 0.2rem rgba(255, 165, 0, 0.15);
    }
</style>