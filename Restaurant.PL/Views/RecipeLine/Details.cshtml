@model Restaurant.BLL.DTOs.RecipeLinesDtos.RecipeLineDetailsDto

@{
    ViewData["Title"] = "Recipe Line Details";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="bi bi-info-circle me-2"></i>Recipe Line Details
            </h1>
            <p class="page-subtitle">Complete information for this recipe line</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="bi bi-pencil-square me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Main Information -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm" style="border-radius: 16px; height: 100%;">
                <div class="card-header bg-white border-bottom" style="border-radius: 16px 16px 0 0;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-journal-text me-2 text-primary"></i>Recipe Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <!-- Menu Item -->
                    <div class="detail-row mb-4">
                        <div class="detail-label">
                            <i class="bi bi-card-list me-2"></i>Menu Item
                        </div>
                        <div class="detail-value">
                            <span class="badge bg-primary fs-6">@Model.MenuItemName</span>
                        </div>
                    </div>

                    <!-- Ingredient -->
                    <div class="detail-row mb-4">
                        <div class="detail-label">
                            <i class="bi bi-basket me-2"></i>Ingredient
                        </div>
                        <div class="detail-value">
                            <span class="badge bg-info fs-6">@Model.IngredientName</span>
                        </div>
                    </div>

                    <!-- Quantity and Unit -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-row">
                                <div class="detail-label">
                                    <i class="bi bi-hash me-2"></i>Quantity
                                </div>
                                <div class="detail-value">
                                    <strong class="fs-4 text-success">@Model.Quantity</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-row">
                                <div class="detail-label">
                                    <i class="bi bi-rulers me-2"></i>Unit
                                </div>
                                <div class="detail-value">
                                    <strong class="fs-4">@Model.Unit</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Administration Details -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm" style="border-radius: 16px; height: 100%;">
                <div class="card-header bg-white border-bottom" style="border-radius: 16px 16px 0 0;">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-shield-check me-2 text-warning"></i>Administration
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="admin-detail">
                        <small class="text-muted d-block mb-1">Created By</small>
                        <div class="fw-semibold">
                            @(Model.CreatedBy ?? "System")
                        </div>
                    </div>

                    <div class="admin-detail">
                        <small class="text-muted d-block mb-1">Created On</small>
                        <div class="fw-semibold">
                            @Model.CreatedOn.ToString("MMM dd, yyyy - hh:mm tt")
                        </div>
                    </div>

                    <div class="admin-detail">
                        <small class="text-muted d-block mb-1">Modified By</small>
                        <div class="fw-semibold">
                            @(Model.ModifiedBy ?? "N/A")
                        </div>
                    </div>

                    <div class="admin-detail mb-0">
                        <small class="text-muted d-block mb-1">Modified On</small>
                        <div class="fw-semibold">
                            @Model.ModifiedOn.ToString("MMM dd, yyyy - hh:mm tt")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Bar -->
    <div class="card shadow-sm" style="border-radius: 16px;">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1 fw-semibold">Quick Actions</h6>
                    <small class="text-muted">Manage this recipe line</small>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square me-2"></i>Edit Recipe
                    </a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 16px;">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this recipe line?</p>
                <p class="text-muted small mt-2">
                    <strong>Menu Item:</strong> @Model.MenuItemName<br />
                    <strong>Ingredient:</strong> @Model.IngredientName
                </p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
    }

    .page-subtitle {
        color: #6c757d;
        margin: 0;
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .detail-value {
        color: #333;
        font-size: 1.1rem;
    }

    .admin-detail {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .admin-detail:last-child {
            border-bottom: none;
        }
</style>