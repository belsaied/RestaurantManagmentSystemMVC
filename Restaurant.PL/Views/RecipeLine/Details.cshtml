@using Restaurant.BLL.DTOs.RecipeLinesDtos
@model RecipesDetailsDto
@{
    ViewData["Title"] = "Recipe Line Details";
}

<div class="container-fluid px-4 py-4">
    <h1 class="mb-4" style="font-weight: 700; color: #FFA500;">Recipe Line Details</h1>

    <div class="row">
        <!-- Regular Data -->
        <div class="col-lg-7 mb-4">
            <div class="card shadow-sm" style="border-radius: 12px;">
                <div class="card-header bg-white" style="font-weight: 600; font-size: 1.2rem;">
                    Recipe Line Information
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Menu Item</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.MenuItem)</dd>

                        <dt class="col-sm-4">Ingredient</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Ingredient)</dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Quantity)</dd>

                        <dt class="col-sm-4">Unit</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Unit)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Administration Data -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm" style="border-radius: 12px;">
                <div class="card-header bg-white" style="font-weight: 600; font-size: 1.2rem;">
                    Administration
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Created By</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.CreatedBy)</dd>

                        <dt class="col-sm-5">Created On</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.CreatedOn)</dd>

                        <dt class="col-sm-5">Modified By</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.ModifiedBy)</dd>

                        <dt class="col-sm-5">Modified On</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(m => m.ModifiedOn)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn"
       style="background-color: #28a745; color: #fff; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 600; margin-right: 8px;">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-action="Index" class="btn"
       style="background-color: #FFC107; color: #000; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 600;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
