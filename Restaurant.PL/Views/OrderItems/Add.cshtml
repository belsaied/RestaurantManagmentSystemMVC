@model Restaurant.BLL.DTOs.OrderItemsModule.CreatedOrderItems

@{
    ViewData["Title"] = "Add";
}

<h1 style="color: orange;">Add</h1>

<h4 style="color: orange;">Created Order Item</h4>
<hr style="border-top: 2px solid orange;" />

<div class="row">
    <div class="col-md-6" style="background-color: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
        <form asp-action="Add">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label text-orange"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UnitPrice" class="control-label text-orange"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="control-label text-orange"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SpecialInstructions" class="control-label text-orange"></label>
                <input asp-for="SpecialInstructions" class="form-control" />
                <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning text-white" />
                <a asp-action="Index" class="btn btn-outline-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    .text-orange {
        color: orange;
        font-weight: bold;
    }
</style>
