@model Restaurant.BLL.DTOs.OrderItemsModule.UpdatedOrderItems

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-orange mb-4">Edit Order Item</h1>

<div class="form-container shadow p-4 rounded">
    <h4 class="text-orange">UpdatedOrderItems</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                @* Hidden fields *@
                <input type="hidden" asp-for="CreatedOn" />
                <input type="hidden" asp-for="ModifiedOn" />

                <div class="form-group mb-3">
                    <label asp-for="Id" class="control-label text-orange fw-bold"></label>
                    <input asp-for="Id" class="form-control bg-white border rounded" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label text-orange fw-bold"></label>
                    <input asp-for="Quantity" class="form-control bg-white border rounded" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UnitPrice" class="control-label text-orange fw-bold"></label>
                    <input asp-for="UnitPrice" class="form-control bg-white border rounded" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalPrice" class="control-label text-orange fw-bold"></label>
                    <input asp-for="TotalPrice" class="form-control bg-white border rounded" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SpecialInstructions" class="control-label text-orange fw-bold"></label>
                    <input asp-for="SpecialInstructions" class="form-control bg-white border rounded" />
                    <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-warning text-white" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .text-orange {
        color: #ff6600;
    }

    .form-container {
        background-color: #fdfdfd;
    }
</style>
