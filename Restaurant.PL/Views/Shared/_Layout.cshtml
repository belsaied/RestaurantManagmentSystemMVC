<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant.PL</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.PL.styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            background-color: #ffffff;
        }

        main {
            flex: 1; /* يخلي المحتوى ياخد المساحة الباقية */
        }

        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
        }

            .navbar-custom .btn-nav {
                background-color: #ff6600; /* أورنج */
                color: #fff !important;
                margin-right: 8px;
                padding: 6px 12px;
                border-radius: 6px;
                font-weight: 500;
                transition: 0.3s;
            }

                .navbar-custom .btn-nav:hover {
                    background-color: #e65c00; /* أورنج أغمق عند hover */
                    color: #fff !important;
                }

        footer {
            background-color: #ff6600; /* أورنج عادي */
            color: #fff;
            padding: 8px 0;
            font-size: 14px;
            margin-top: auto; /* يخلي الفوتر ينزل تحت */
        }

            footer a {
                color: #fff;
                text-decoration: underline;
            }
    </style>
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom mb-3">
            <div class="container-fluid">
                <!-- شلنا Restaurant.PL -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Payment" asp-action="Index">Payments</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

