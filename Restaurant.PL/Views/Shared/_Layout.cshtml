<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant.PL</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurant.PL.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            background-color: #ffffff;
        }

        main {
            flex: 1;
        }

        .navbar-custom {
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
            padding: 12px 0;
        }

            .navbar-custom .btn-nav {
                background-color: #ff6600;
                color: #fff !important;
                margin-right: 8px;
                padding: 8px 16px;
                border-radius: 6px;
                font-weight: 500;
                transition: all 0.3s ease;
                border: none;
                display: inline-flex;
                align-items: center;
                gap: 6px;
            }

                .navbar-custom .btn-nav:hover {
                    background-color: #e65c00;
                    color: #fff !important;
                    transform: translateY(-2px);
                    box-shadow: 0 4px 8px rgba(255, 102, 0, 0.3);
                }

                .navbar-custom .btn-nav i {
                    font-size: 16px;
                }

        footer {
            background-color: #ff6600;
            color: #fff;
            padding: 12px 0;
            font-size: 14px;
            margin-top: auto;
        }

            footer a {
                color: #fff;
                text-decoration: underline;
            }

                footer a:hover {
                    color: #fff;
                    opacity: 0.8;
                }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-start">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill"></i> Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Payment" asp-action="Index">
                                <i class="bi bi-credit-card-fill"></i> Payments
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Ingredient" asp-action="Index">
                                <i class="bi bi-egg-fill"></i> Ingredients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="RecipeLine" asp-action="Index">
                                <i class="bi bi-file-text-fill"></i> RecipeLines
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Customer" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="bi bi-cart-fill"></i> Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Table" asp-action="Index">
                                <i class="bi bi-table"></i> Tables
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="OrderItems" asp-action="Index">
                                <i class="bi bi-list-check"></i> All Order Items
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-nav" asp-area="" asp-controller="Category" asp-action="Index">
                                <i class="bi bi-bookmark-fill"></i> Categories
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("ValidationScripts", required: false)
</body>
</html>