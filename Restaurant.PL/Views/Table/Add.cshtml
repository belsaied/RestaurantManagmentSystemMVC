@model Restaurant.BLL.DTOs.TableModule.CreatedTableDto

@{
    ViewData["Title"] = "Add New Table";
}

<h2 class="text-orange mb-4">Add Table</h2>

<div class="card shadow-sm p-4 custom-card">
    <form asp-action="Add" method="post">
        <div asp-validation-summary="All" class="text-bg-danger"></div>
        <div class="mb-3">
            <label asp-for="TableNumber" class="form-label text-orange"></label>
            <input asp-for="TableNumber" class="form-control border-orange" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Capacity" class="form-label text-orange"></label>
            <input asp-for="Capacity" class="form-control border-orange" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label text-orange"></label>
            <input asp-for="Location" class="form-control border-orange" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-orange">Save</button>
            <a asp-action="Index" class="btn btn-outline-orange">Back to List</a>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .text-orange {
            color: #ff6600;
        }

        .btn-orange {
            background-color: #ff6600;
            color: #fff !important;
            border-radius: 6px;
            transition: 0.3s;
            padding: 8px 16px;
        }

            .btn-orange:hover {
                background-color: #e65c00;
            }

        .btn-outline-orange {
            border: 1px solid #ff6600;
            color: #ff6600 !important;
            border-radius: 6px;
            padding: 8px 16px;
            transition: 0.3s;
        }

            .btn-outline-orange:hover {
                background-color: #ff6600;
                color: #fff !important;
            }

        .form-control.border-orange {
            border: 1px solid #ff6600;
            border-radius: 6px;
        }

            .form-control.border-orange:focus {
                border-color: #e65c00;
                box-shadow: 0 0 4px rgba(255, 102, 0, 0.5);
            }

        .custom-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
