@model IEnumerable<Restaurant.BLL.DTOs.PaymentModule.PaymentDto>

@{
    ViewData["Title"] = "Payments";
}

<div class="container mt-4">
    <h2 class="mb-3 text-orange">Payments</h2>

    <div class="mb-3">
        <a asp-action="Add" class="btn btn-orange">+ Create New Payment</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="bg-orange text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                <th>@Html.DisplayNameFor(model => model.TransactionRef)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Amount.ToString("C")</td>
                        <td>@item.PaymentDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.TransactionRef</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.TransactionRef" class="btn btn-sm btn-outline-orange">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.TransactionRef" class="btn btn-sm btn-orange">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.TransactionRef" class="btn btn-sm btn-dark-orange">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No payments found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .text-orange {
        color: #ff6600;
    }

    .bg-orange {
        background-color: #ff6600 !important;
    }

    .btn-orange {
        background-color: #ff6600;
        color: #fff;
        border: none;
    }

    .btn-orange:hover {
        background-color: #e65c00;
        color: #fff;
    }

    .btn-outline-orange {
        border: 1px solid #ff6600;
        color: #ff6600;
        background-color: transparent;
    }

    .btn-outline-orange:hover {
        background-color: #ff6600;
        color: #fff;
    }

    .btn-dark-orange {
        background-color: #cc5200;
        color: #fff;
        border: none;
    }

    .btn-dark-orange:hover {
        background-color: #b34700;
        color: #fff;
    }
</style>
