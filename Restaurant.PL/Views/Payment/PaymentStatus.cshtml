@model Restaurant.BLL.DTOs.PaymentModule.PaymentDto

@{
    ViewData["Title"] = "Payment Status";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Payment Status</h3>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <div class="alert @(Model.Status == "succeeded" ? "alert-success" : "alert-warning")">
                            <h4>Status: @Model.Status.ToUpper()</h4>
                        </div>
                        <div class="mb-2"><strong>Order ID:</strong> @Model.OrderId</div>
                        <div class="mb-2"><strong>Amount:</strong> $@Model.Amount</div>
                        <div class="mb-2"><strong>Payment ID:</strong> @Model.StripePaymentIntentId</div>
                        <div class="mb-2"><strong>Date:</strong> @Model.CreatedAt.ToString("f")</div>
                    }
                    else
                    {
                        <div class="alert alert-danger">Payment not found</div>
                    }

                    <a href="@Url.Action("Index", "Order")" class="btn btn-primary mt-3">Back to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
