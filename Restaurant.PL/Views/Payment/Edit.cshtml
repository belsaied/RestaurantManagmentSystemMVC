@model Restaurant.PL.ViewModels.PaymentUpdateViewModel

@{
    ViewData["Title"] = "Edit Payment";
}

<h2 style="color: orange;">Edit Payment</h2>

<div style="background-color: white; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(255, 165, 0, 0.3);">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Amount" style="color: orange;"></label>
            <input asp-for="Amount" class="form-control" style="border: 1px solid orange;" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="PaymentDate" style="color: orange;"></label>
            <input asp-for="PaymentDate" type="date" class="form-control" style="border: 1px solid orange;" />
            <span asp-validation-for="PaymentDate" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="TransactionRef" style="color: orange;"></label>
            <input asp-for="TransactionRef" class="form-control" style="border: 1px solid orange;" />
            <span asp-validation-for="TransactionRef" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label asp-for="Status" style="color: orange;"></label>
            <input asp-for="Status" class="form-control" style="border: 1px solid orange;" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn"
                style="background-color: orange; color: white; font-weight: bold; padding: 8px 20px; border: none; border-radius: 5px;">
            Save Changes
        </button>
        <a asp-action="Index" class="btn"
           style="background-color: white; color: orange; border: 1px solid orange; padding: 8px 20px; border-radius: 5px; margin-left: 10px;">
            Cancel
        </a>
    </form>
</div>
