@model CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="border-radius: 12px; border: none;">
                <div class="card-header" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef; padding: 20px; border-radius: 12px 12px 0 0;">
                    <h2 class="mb-0" style="font-weight: 600;">Edit Category</h2>
                </div>
                <div class="card-body" style="padding: 30px;">
                    <form method="post" asp-controller="Category" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 8px;"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="CategoryName" style="font-weight: 500; margin-bottom: 8px;">Category Name</label>
                                <input asp-for="CategoryName" class="form-control" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;" />
                                <span asp-validation-for="CategoryName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="DisplayOrder" style="font-weight: 500; margin-bottom: 8px;">Display Order</label>
                                <input type="number" asp-for="DisplayOrder" class="form-control" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;" />
                                <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
                                <small class="form-text text-muted">Lower numbers appear first (e.g., 1, 2, 3...)</small>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label" asp-for="Description" style="font-weight: 500; margin-bottom: 8px;">Description</label>
                                <textarea class="form-control" asp-for="Description" rows="4" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                            <div class="col-12 mb-4">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" style="width: 18px; height: 18px; margin-top: 3px;" />
                                    <label class="form-check-label" asp-for="IsActive" style="font-weight: 500; margin-left: 8px;">
                                        Is Active
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn" style="background-color: #28a745; color: white; border: none; padding: 10px 24px; border-radius: 6px; font-weight: 500;">
                                Save
                            </button>
                            <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Index" style="padding: 10px 24px; border-radius: 6px; font-weight: 500;">
                                Back to list
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}