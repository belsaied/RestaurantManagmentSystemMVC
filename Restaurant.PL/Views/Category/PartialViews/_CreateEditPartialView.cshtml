@model CategoryViewModel

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="form-label" asp-for="CategoryName" style="font-weight: 500; margin-bottom: 8px;">Category Name</label>
        <input asp-for="CategoryName" class="form-control" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;" />
        <span asp-validation-for="CategoryName" class="text-danger small"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label class="form-label" asp-for="DisplayOrder" style="font-weight: 500; margin-bottom: 8px;">Display Order</label>
        <input type="number" asp-for="DisplayOrder" class="form-control" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;" />
        <span asp-validation-for="DisplayOrder" class="text-danger small"></span>
        <small class="form-text text-muted">Lower numbers appear first (e.g., 1, 2, 3...)</small>
    </div>
    <div class="col-12 mb-3">
        <label class="form-label" asp-for="Description" style="font-weight: 500; margin-bottom: 8px;">Description</label>
        <textarea class="form-control" asp-for="Description" rows="4" style="padding: 10px 16px; border-radius: 6px; border: 1px solid #ced4da;"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
    </div>
    <div class="col-12 mb-4">
        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" style="width: 18px; height: 18px; margin-top: 3px;" />
            <label class="form-check-label" asp-for="IsActive" style="font-weight: 500; margin-left: 8px;">
                Is Active
            </label>
        </div>
    </div>
</div>