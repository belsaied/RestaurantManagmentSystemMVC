@model IEnumerable<GetAllCategoriesDTO>
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="font-weight: 600;">All Categories</h1>
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create" style="padding: 10px 24px; border-radius: 6px; font-weight: 500;">
            <i class="bi bi-plus-circle me-2"></i>Create New Category
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        var messageType = TempData["MessageType"]?.ToString() ?? "info";
        var alertClass = messageType == "success" ? "alert-success" : messageType == "error" ? "alert-danger" : "alert-info";

        <div class="alert @alertClass alert-dismissible fade show" role="alert" style="border-radius: 8px;">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm" style="border-radius: 12px; border: none; overflow: hidden;">
                        @* Category Image *@
                        <div class="position-relative" style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(category.ImageName))
                            {
                                <img src="~/Files/Categories/@category.ImageName"
                                     alt="@category.CategoryName"
                                     class="w-100 h-100"
                                     style="object-fit: cover;"
                                     onerror="this.onerror=null; this.src='/images/no-image.png';" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="bi bi-image" style="font-size: 3rem; color: white; opacity: 0.5;"></i>
                                </div>
                            }

                            @* Order Badge *@
                            <div class="position-absolute top-0 start-0 m-3">
                                <span class="badge bg-dark" style="padding: 8px 12px; border-radius: 6px; font-weight: 500;">
                                    Order: @category.DisplayOrder
                                </span>
                            </div>

                            @* Active Status Badge *@
                            <div class="position-absolute top-0 end-0 m-3">
                                @if (category.IsActive)
                                {
                                    <span class="badge bg-success" style="padding: 8px 12px; border-radius: 6px; font-weight: 500;">
                                        <i class="bi bi-check-circle me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary" style="padding: 8px 12px; border-radius: 6px; font-weight: 500;">
                                        <i class="bi bi-x-circle me-1"></i>Inactive
                                    </span>
                                }
                            </div>
                        </div>

                        @* Category Details *@
                        <div class="card-body" style="padding: 20px;">
                            <h5 class="card-title mb-2" style="font-weight: 600; color: #2c3e50;">
                                @category.CategoryName
                            </h5>

                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="card-text text-muted mb-3" style="font-size: 0.9rem; line-height: 1.5;">
                                    @(category.Description.Length > 80 ? category.Description.Substring(0, 80) + "..." : category.Description)
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-muted mb-3" style="font-size: 0.9rem; font-style: italic;">
                                    No description available
                                </p>
                            }

                            @* Action Buttons *@
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary btn-sm flex-fill"
                                   asp-controller="Category"
                                   asp-action="Details"
                                   asp-route-id="@category.Id"
                                   style="border-radius: 6px; font-weight: 500;">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                <a class="btn btn-outline-success btn-sm flex-fill"
                                   asp-controller="Category"
                                   asp-action="Edit"
                                   asp-route-id="@category.Id"
                                   style="border-radius: 6px; font-weight: 500;">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm flex-fill"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal-@category.Id"
                                        style="border-radius: 6px; font-weight: 500;">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>

                        @* Category Footer with Metadata *@
                        <div class="card-footer bg-light" style="padding: 12px 20px; border-top: 1px solid #e9ecef;">
                            <small class="text-muted">
                                <i class="bi bi-calendar3 me-1"></i>
                                Created: @category.CreatedOn: MMMM dd, yyyy
                            </small>
                        </div>
                    </div>

                    @* Delete Confirmation Modal *@
                    <div class="modal fade" id="deleteModal-@category.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content" style="border-radius: 12px; border: none;">
                                <div class="modal-header" style="border-bottom: 1px solid #e9ecef;">
                                    <h5 class="modal-title" id="deleteModalLabel" style="font-weight: 600;">
                                        <i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirm Delete
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="padding: 24px;">
                                    <p class="mb-2">Are you sure you want to delete the category:</p>
                                    <p class="fw-bold text-danger mb-3">"@category.CategoryName"?</p>
                                    <p class="text-muted mb-0" style="font-size: 0.9rem;">
                                        <i class="bi bi-info-circle me-1"></i>This action cannot be undone.
                                    </p>
                                </div>
                                <div class="modal-footer" style="border-top: 1px solid #e9ecef;">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 6px;">
                                        Cancel
                                    </button>
                                    <form method="post" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger" style="border-radius: 6px;">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-folder-x" style="font-size: 4rem; color: #6c757d; opacity: 0.5;"></i>
            </div>
            <h3 class="text-muted mb-3">No Categories Found</h3>
            <p class="text-muted mb-4">Start by creating your first category</p>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create" style="padding: 12px 32px; border-radius: 6px; font-weight: 500;">
                <i class="bi bi-plus-circle me-2"></i>Create New Category
            </a>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
            }

        .btn {
            transition: all 0.2s;
        }

            .btn:hover {
                transform: translateY(-1px);
            }
    </style>
}