@model GetByIdCategoryDTO
@{
    ViewData["Title"] = "Category Details";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="border-radius: 12px; border: none;">
                <div class="card-header" style="background-color: #f8f9fa; border-bottom: 1px solid #e9ecef; padding: 20px; border-radius: 12px 12px 0 0;">
                    <h2 class="mb-0" style="font-weight: 600;">Category Details: @Model.CategoryName</h2>
                </div>
                <div class="card-body" style="padding: 30px;">
                    @if (!string.IsNullOrEmpty(Model.ImageName))
                    {
                        <div class="mb-4 text-center">
                            <img src="~/Files/Categories/@Model.ImageName" alt="@Model.CategoryName" class="img-fluid rounded shadow-sm" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Category Name</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                @Model.CategoryName
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Display Order</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                @Model.DisplayOrder
                            </div>
                        </div>
                        <div class="col-12 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Description</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef; min-height: 80px;">
                                @(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label text-muted" style="font-weight: 500; font-size: 14px; margin-bottom: 8px;">Status</label>
                            <div style="padding: 10px 16px; background-color: #f8f9fa; border-radius: 6px; border: 1px solid #e9ecef;">
                                @if (Model.IsActive)
                                {
                                    <span class="badge d-inline-flex align-items-center" style="background-color: #28a745; padding: 6px 12px; border-radius: 6px; font-size: 14px;">
                                        <i class="bi bi-check-circle-fill me-2"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge d-inline-flex align-items-center" style="background-color: #dc3545; padding: 6px 12px; border-radius: 6px; font-size: 14px;">
                                        <i class="bi bi-x-circle-fill me-2"></i> Inactive
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn d-flex align-items-center" style="background-color: #28a745; color: white; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 500;">
                            <i class="bi bi-pencil-square me-2"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center" style="padding: 10px 24px; border-radius: 8px; font-weight: 500;">
                            <i class="bi bi-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>