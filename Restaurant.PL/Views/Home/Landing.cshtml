@{
    ViewData["Title"] = "Welcome to Krusty Krab";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    body {
        background: #0a0e27;
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Premium Blurred Background Image */
    .premium-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
        pointer-events: none;
    }

    .bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('~/images/KrustyKrab.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(60px) brightness(0.4);
        transform: scale(1.1);
    }

    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse at 20% 30%, rgba(255, 102, 0, 0.15) 0%, transparent 50%), radial-gradient(ellipse at 80% 70%, rgba(255, 140, 0, 0.12) 0%, transparent 50%), linear-gradient(135deg, rgba(10, 14, 39, 0.85) 0%, rgba(26, 31, 58, 0.9) 50%, rgba(15, 22, 40, 0.85) 100%);
    }

    .bg-gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, rgba(10, 14, 39, 0) 0%, rgba(10, 14, 39, 0.3) 30%, rgba(10, 14, 39, 0.7) 70%, rgba(10, 14, 39, 0.95) 100% );
    }

    /* Subtle Animated Particles */
    .particle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 140, 0, 0.3);
        animation: float-particle linear infinite;
        opacity: 0;
    }

    @@keyframes float-particle {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }

        10% {
            opacity: 0.6;
        }

        90% {
            opacity: 0.6;
        }

        100% {
            transform: translateY(-100px) scale(1);
            opacity: 0;
        }
    }

    .particle:nth-child(1) {
        left: 15%;
        width: 4px;
        height: 4px;
        animation-duration: 12s;
        animation-delay: 0s;
    }

    .particle:nth-child(2) {
        left: 35%;
        width: 6px;
        height: 6px;
        animation-duration: 15s;
        animation-delay: 2s;
    }

    .particle:nth-child(3) {
        left: 55%;
        width: 3px;
        height: 3px;
        animation-duration: 10s;
        animation-delay: 4s;
    }

    .particle:nth-child(4) {
        left: 75%;
        width: 5px;
        height: 5px;
        animation-duration: 13s;
        animation-delay: 1s;
    }

    .particle:nth-child(5) {
        left: 85%;
        width: 4px;
        height: 4px;
        animation-duration: 11s;
        animation-delay: 3s;
    }

    /* Geometric Shapes - Enhanced for visibility */
    .geometric-shape {
        position: fixed;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(255, 102, 0, 0.12), rgba(255, 140, 0, 0.08));
        backdrop-filter: blur(30px);
        animation: rotate-shape 20s linear infinite;
        z-index: 1;
        border: 1px solid rgba(255, 140, 0, 0.2);
    }

    @@keyframes rotate-shape {
        0% {
            transform: rotate(0deg) translateY(0);
        }

        50% {
            transform: rotate(180deg) translateY(-20px);
        }

        100% {
            transform: rotate(360deg) translateY(0);
        }
    }

    .shape-1 {
        width: 400px;
        height: 400px;
        top: 10%;
        left: -100px;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }

    .shape-2 {
        width: 300px;
        height: 300px;
        bottom: 15%;
        right: -80px;
        border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        animation-duration: 25s;
        animation-direction: reverse;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        padding: 100px 20px 60px;
        position: relative;
        z-index: 10;
    }

    /* Premium Brand Badge */
    .brand-badge {
        display: inline-block;
        padding: 8px 20px;
        background: rgba(255, 140, 0, 0.15);
        border: 1px solid rgba(255, 140, 0, 0.3);
        border-radius: 50px;
        color: #ff8c00;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        margin-bottom: 25px;
        backdrop-filter: blur(10px);
        animation: fadeInDown 0.8s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Removed logo-container, logo-frame, logo-image classes - no longer needed */

    .hero-title {
        color: #ffffff;
        font-size: 4.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        text-shadow: 0 0 60px rgba(255, 140, 0, 0.6);
        line-height: 1.1;
        letter-spacing: -2px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.4rem;
        font-weight: 500;
        margin-bottom: 50px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        letter-spacing: 0.5px;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    /* Auth Buttons Container */
    .auth-buttons-container {
        display: flex;
        gap: 25px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 80px;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .auth-btn {
        padding: 18px 50px;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 12px;
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        min-width: 200px;
        justify-content: center;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        backdrop-filter: blur(10px);
    }

        .auth-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .auth-btn:hover::before {
            left: 100%;
        }

    .auth-btn-login {
        background: linear-gradient(135deg, rgba(255, 102, 0, 0.9) 0%, rgba(255, 140, 0, 0.9) 100%);
        color: white;
        box-shadow: 0 10px 40px rgba(255, 102, 0, 0.4);
    }

        .auth-btn-login:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(255, 102, 0, 0.6);
            background: linear-gradient(135deg, rgba(255, 102, 0, 1) 0%, rgba(255, 140, 0, 1) 100%);
        }

    .auth-btn-register {
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        border: 2px solid rgba(255, 140, 0, 0.5);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

        .auth-btn-register:hover {
            background: rgba(255, 140, 0, 0.15);
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(255, 140, 0, 0.3);
            border-color: rgba(255, 140, 0, 0.8);
        }

    /* Features Section */
    .features-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px 60px;
        position: relative;
        z-index: 10;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
        animation: fadeInUp 0.8s ease-out 0.8s both;
    }

    .feature-card {
        background: rgba(26, 31, 58, 0.4);
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        transition: all 0.4s ease;
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 140, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, #ff8c00, transparent);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(255, 140, 0, 0.3);
            border-color: rgba(255, 140, 0, 0.5);
            background: rgba(26, 31, 58, 0.6);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, rgba(255, 102, 0, 0.25), rgba(255, 140, 0, 0.25));
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
        font-size: 36px;
        color: #ff8c00;
        box-shadow: 0 10px 25px rgba(255, 140, 0, 0.2);
        border: 1px solid rgba(255, 140, 0, 0.3);
        transition: all 0.4s ease;
        backdrop-filter: blur(10px);
    }

    .feature-card:hover .feature-icon {
        transform: scale(1.1) rotateY(180deg);
        box-shadow: 0 15px 35px rgba(255, 140, 0, 0.4);
    }

    .feature-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 15px;
        letter-spacing: 0.5px;
    }

    .feature-description {
        color: rgba(255, 255, 255, 0.7);
        font-size: 1rem;
        line-height: 1.6;
        font-weight: 400;
    }

    /* Security Badge */
    .security-badge {
        background: rgba(26, 31, 58, 0.4);
        border-radius: 20px;
        padding: 35px 40px;
        text-align: center;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        max-width: 700px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 30px;
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 140, 0, 0.3);
        animation: fadeInUp 0.8s ease-out 1s both;
    }

    .security-icon {
        font-size: 50px;
        color: #ff8c00;
        text-shadow: 0 0 20px rgba(255, 140, 0, 0.5);
        flex-shrink: 0;
    }

    .security-text {
        text-align: left;
    }

        .security-text h3 {
            color: #ffffff;
            font-weight: 700;
            font-size: 1.3rem;
            margin-bottom: 8px;
            letter-spacing: 0.5px;
        }

        .security-text p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.95rem;
            margin: 0;
            line-height: 1.5;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 3rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .hero-section {
            padding: 80px 20px 40px;
        }

        .auth-buttons-container {
            flex-direction: column;
            padding: 0 20px;
        }

        .auth-btn {
            width: 100%;
            max-width: 350px;
            margin: 0 auto;
        }

        .security-badge {
            flex-direction: column;
            text-align: center;
            padding: 30px 25px;
        }

        .security-text {
            text-align: center;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 480px) {
        .hero-title {
            font-size: 2.5rem;
            letter-spacing: -1px;
        }

        .hero-section {
            padding: 60px 20px 40px;
        }

        .feature-card {
            padding: 30px 20px;
        }

        .auth-btn {
            padding: 16px 40px;
            font-size: 1rem;
        }

        .brand-badge {
            font-size: 0.75rem;
            padding: 6px 16px;
        }
    }
</style>

