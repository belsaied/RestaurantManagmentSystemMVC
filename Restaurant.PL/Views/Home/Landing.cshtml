@{
    ViewData["Title"] = "Welcome to Krusty Krab";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

    /* Premium Blurred Background with Krusty Krab Image */
    .premium-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
    }

    .bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('~/images/KrustyKrab.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(40px) brightness(0.5);
        transform: scale(1.1);
    }

    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 102, 0, 0.75) 0%, rgba(255, 140, 0, 0.65) 25%, rgba(10, 14, 39, 0.85) 60%, rgba(15, 22, 40, 0.9) 100% );
    }

    .bg-gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse at 30% 20%, rgba(255, 140, 0, 0.2) 0%, transparent 50%), radial-gradient(ellipse at 70% 80%, rgba(255, 102, 0, 0.15) 0%, transparent 50%);
    }

    /* Animated particles */
    .particle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 179, 71, 0.4);
        animation: float-particle linear infinite;
        opacity: 0;
    }

    @@keyframes float-particle {
        0% {
            transform: translateY(100vh) scale(0);
            opacity: 0;
        }

        10% {
            opacity: 0.8;
        }

        90% {
            opacity: 0.8;
        }

        100% {
            transform: translateY(-100px) scale(1);
            opacity: 0;
        }
    }

    .particle:nth-child(1) {
        left: 15%;
        width: 5px;
        height: 5px;
        animation-duration: 12s;
        animation-delay: 0s;
    }

    .particle:nth-child(2) {
        left: 35%;
        width: 7px;
        height: 7px;
        animation-duration: 15s;
        animation-delay: 2s;
    }

    .particle:nth-child(3) {
        left: 55%;
        width: 4px;
        height: 4px;
        animation-duration: 10s;
        animation-delay: 4s;
    }

    .particle:nth-child(4) {
        left: 75%;
        width: 6px;
        height: 6px;
        animation-duration: 13s;
        animation-delay: 1s;
    }

    .particle:nth-child(5) {
        left: 85%;
        width: 5px;
        height: 5px;
        animation-duration: 11s;
        animation-delay: 3s;
    }

    /* Floating geometric shapes */
    .geometric-shape {
        position: fixed;
        border-radius: 20px;
        background: linear-gradient(135deg, rgba(255, 179, 71, 0.15), rgba(255, 140, 0, 0.1));
        backdrop-filter: blur(20px);
        animation: rotate-shape 25s linear infinite;
        z-index: 1;
        border: 1px solid rgba(255, 179, 71, 0.3);
    }

    @@keyframes rotate-shape {
        0% {
            transform: rotate(0deg) translateY(0);
        }

        50% {
            transform: rotate(180deg) translateY(-30px);
        }

        100% {
            transform: rotate(360deg) translateY(0);
        }
    }

    .shape-1 {
        width: 300px;
        height: 300px;
        top: 10%;
        left: -80px;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }

    .shape-2 {
        width: 250px;
        height: 250px;
        bottom: 15%;
        right: -60px;
        border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        animation-duration: 30s;
        animation-direction: reverse;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        padding: 120px 20px 80px;
        position: relative;
        z-index: 10;
    }

    .brand-badge {
        display: inline-block;
        padding: 10px 24px;
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 179, 71, 0.5);
        border-radius: 50px;
        color: #FFB347;
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 2px;
        text-transform: uppercase;
        margin-bottom: 30px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(255, 140, 0, 0.3);
        animation: fadeInDown 0.8s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-title {
        color: #ffffff;
        font-size: 5rem;
        font-weight: 900;
        margin-bottom: 25px;
        text-shadow: 0 0 80px rgba(255, 179, 71, 0.8), 0 4px 20px rgba(0, 0, 0, 0.5);
        line-height: 1.1;
        letter-spacing: -2px;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 60px;
        text-shadow: 0 2px 20px rgba(0, 0, 0, 0.7);
        letter-spacing: 1px;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    /* Auth Buttons */
    .auth-buttons-container {
        display: flex;
        gap: 30px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 100px;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .auth-btn {
        padding: 20px 55px;
        font-size: 1.15rem;
        font-weight: 800;
        border-radius: 16px;
        border: none;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 14px;
        min-width: 220px;
        justify-content: center;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(20px);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
    }

        .auth-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s ease;
        }

        .auth-btn:hover::before {
            left: 100%;
        }

    .auth-btn-login {
        background: linear-gradient(135deg, rgba(255, 102, 0, 0.95) 0%, rgba(255, 140, 0, 0.95) 100%);
        color: white;
        border: 2px solid rgba(255, 179, 71, 0.5);
    }

        .auth-btn-login:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 20px 60px rgba(255, 102, 0, 0.6);
            background: linear-gradient(135deg, rgba(255, 102, 0, 1) 0%, rgba(255, 140, 0, 1) 100%);
        }

    .auth-btn-register {
        background: rgba(255, 255, 255, 0.15);
        color: #ffffff;
        border: 3px solid rgba(255, 179, 71, 0.7);
    }

        .auth-btn-register:hover {
            background: rgba(255, 179, 71, 0.25);
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 20px 60px rgba(255, 179, 71, 0.5);
            border-color: rgba(255, 179, 71, 1);
        }

    /* Features Section */
    .features-section {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px 80px;
        position: relative;
        z-index: 10;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 35px;
        margin-bottom: 80px;
        animation: fadeInUp 0.8s ease-out 0.8s both;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.12);
        border-radius: 24px;
        padding: 45px 35px;
        text-align: center;
        box-shadow: 0 15px 60px rgba(0, 0, 0, 0.4);
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        backdrop-filter: blur(30px);
        border: 2px solid rgba(255, 179, 71, 0.3);
        position: relative;
        overflow: hidden;
    }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, transparent, #FFB347, transparent);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .feature-card:hover::before {
            opacity: 1;
        }

        .feature-card:hover {
            transform: translateY(-15px) scale(1.03);
            box-shadow: 0 25px 80px rgba(255, 140, 0, 0.5);
            border-color: rgba(255, 179, 71, 0.8);
            background: rgba(255, 255, 255, 0.18);
        }

    .feature-icon {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, rgba(255, 140, 0, 0.4), rgba(255, 179, 71, 0.4));
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        font-size: 42px;
        color: #FFB347;
        box-shadow: 0 15px 40px rgba(255, 140, 0, 0.4);
        border: 2px solid rgba(255, 179, 71, 0.5);
        transition: all 0.5s ease;
        backdrop-filter: blur(10px);
    }

    .feature-card:hover .feature-icon {
        transform: scale(1.15) rotate(360deg);
        box-shadow: 0 20px 50px rgba(255, 179, 71, 0.6);
    }

    .feature-title {
        font-size: 1.6rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 18px;
        letter-spacing: 0.5px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    .feature-description {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.05rem;
        line-height: 1.7;
        font-weight: 500;
    }

    /* Security Badge */
    .security-badge {
        background: rgba(255, 255, 255, 0.12);
        border-radius: 24px;
        padding: 40px 50px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 35px;
        backdrop-filter: blur(30px);
        border: 2px solid rgba(255, 179, 71, 0.4);
        animation: fadeInUp 0.8s ease-out 1s both;
    }

    .security-icon {
        font-size: 60px;
        color: #FFB347;
        text-shadow: 0 0 30px rgba(255, 179, 71, 0.8);
        flex-shrink: 0;
    }

    .security-text {
        text-align: left;
    }

        .security-text h3 {
            color: #ffffff;
            font-weight: 800;
            font-size: 1.5rem;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
        }

        .security-text p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.05rem;
            margin: 0;
            line-height: 1.6;
            font-weight: 500;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 3.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-section {
            padding: 100px 20px 60px;
        }

        .auth-buttons-container {
            flex-direction: column;
            padding: 0 20px;
        }

        .auth-btn {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
        }

        .security-badge {
            flex-direction: column;
            text-align: center;
            padding: 35px 30px;
        }

        .security-text {
            text-align: center;
        }

        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

