@using Restaurant.PL.Controllers
@{
    ViewData["Title"] = "Dashboard - Krusty Krab Restaurant";
}

<style>
    /* Modern Dashboard Styling with Enhanced Visuals */
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .dashboard-header {
        background: linear-gradient(135deg, #FF4E00 0%, #EC9F05 50%, #FFB347 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 20px;
        margin-bottom: 2.5rem;
        box-shadow: 0 20px 40px rgba(255, 78, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .dashboard-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    .dashboard-header h1 {
        position: relative;
        z-index: 1;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        font-weight: 900;
    }

    .dashboard-header p {
        position: relative;
        z-index: 1;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 1px solid rgba(0, 0, 0, 0.05);
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, transparent, currentColor, transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

            .stat-card:hover::before {
                opacity: 1;
            }

    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1.25rem;
        position: relative;
        animation: pulse 2s ease-in-out infinite;
        color: white !important;
    }

        .stat-icon i {
            color: white !important;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        color: #6c757d;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-trend {
        display: inline-block;
        margin-top: 0.5rem;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .trend-up {
        background: #d4edda;
        color: #155724;
    }

    .trend-down {
        background: #f8d7da;
        color: #721c24;
    }

    .quick-action-card {
        background: white;
        border-radius: 16px;
        padding: 2rem 1.5rem;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        border: 2px solid #f0f0f0;
        cursor: pointer;
        text-decoration: none;
        display: block;
        color: inherit;
        position: relative;
        overflow: hidden;
    }

        .quick-action-card::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 78, 0, 0.1);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .quick-action-card:hover::before {
            width: 300px;
            height: 300px;
        }

        .quick-action-card:hover {
            border-color: #FF4E00;
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(255, 78, 0, 0.2);
            color: inherit;
            text-decoration: none;
        }

    .quick-action-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.25rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.25rem;
        background: linear-gradient(135deg, #FF4E00 0%, #EC9F05 100%);
        color: white;
        position: relative;
        z-index: 1;
        transition: transform 0.3s ease;
        box-shadow: 0 8px 20px rgba(255, 78, 0, 0.3);
    }

    .quick-action-card:hover .quick-action-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .quick-action-title {
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: #2c3e50;
        position: relative;
        z-index: 1;
    }

    .quick-action-desc {
        color: #6c757d;
        font-size: 0.95rem;
        position: relative;
        z-index: 1;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 4px solid #FF4E00;
        display: inline-block;
        position: relative;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 50%;
            height: 4px;
            background: #EC9F05;
        }

    .activity-item {
        padding: 1.25rem;
        border-left: 4px solid #FF4E00;
        background: white;
        margin-bottom: 1rem;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }

        .activity-item:hover {
            transform: translateX(8px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.12);
        }

    .activity-time {
        color: #6c757d;
        font-size: 0.85rem;
        font-weight: 600;
        background: #f8f9fa;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
    }

    .gradient-orange {
        background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
    }

    .gradient-blue {
        background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
    }

    .gradient-green {
        background: linear-gradient(135deg, #00D084 0%, #00A86B 100%);
    }

    .gradient-red {
        background: linear-gradient(135deg, #E74C3C 0%, #C0392B 100%);
    }

    .alert {
        border-radius: 12px;
        border: none;
        padding: 1.25rem;
        margin-bottom: 1rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        animation: slideIn 0.5s ease;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .content-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .activity-card {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #3d6ab8 100%);
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(30, 60, 114, 0.25);
        position: relative;
        overflow: hidden;
    }

        .activity-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        .activity-card .section-title {
            color: white;
            border-bottom-color: rgba(255, 255, 255, 0.3);
        }

            .activity-card .section-title::after {
                background: rgba(255, 255, 255, 0.5);
            }

        .activity-card .activity-item {
            background: rgba(255, 255, 255, 0.95);
            border-left-color: #FF4E00;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
    }

        .empty-state i {
            font-size: 3rem;
            color: rgba(255, 255, 255, 0.3);
        }

        .empty-state p {
            color: white;
            margin-top: 1rem;
            margin-bottom: 0;
        }

    @@media (max-width: 768px) {
        .stat-card {
            margin-bottom: 1rem;
        }

        .dashboard-header {
            padding: 2rem 1rem;
        }

        .stat-value {
            font-size: 2rem;
        }
    }
</style>

<!-- Dashboard Header -->
<div class="dashboard-header text-center">
    <h1 class="display-3 fw-bold mb-3">🍔 Welcome to Krusty Krab</h1>
    <p class="lead mb-0 fs-4">Your Complete Restaurant Management Hub</p>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-5">
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon gradient-orange">
                <i class="bi bi-receipt-cutoff"></i>
            </div>
            <div class="stat-value">@(ViewBag.TotalOrdersToday ?? 0)</div>
            <div class="stat-label">Orders Today</div>
            <span class="stat-trend trend-up">↑ @(ViewBag.OrderTrend ?? 0)% from yesterday</span>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon gradient-blue">
                <i class="bi bi-menu-button-wide"></i>
            </div>
            <div class="stat-value">@(ViewBag.TotalMenuItems ?? 0)</div>
            <div class="stat-label">Menu Items</div>
            <span class="stat-trend trend-up">↑ Available items</span>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon gradient-green">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-value">@((ViewBag.ActiveCustomers ?? 0).ToString("N0"))</div>
            <div class="stat-label">Total Customers</div>
            <span class="stat-trend trend-up">↑ Growing base</span>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card">
            <div class="stat-icon gradient-red">
                <i class="bi bi-currency-dollar"></i>
            </div>
            <div class="stat-value">@(ViewBag.RevenueToday ?? "$0.00")</div>
            <div class="stat-label">Revenue Today</div>
            <span class="stat-trend trend-up">↑ Keep it up!</span>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="mb-5">
    <h2 class="section-title">⚡ Quick Actions</h2>
    <div class="row g-4 mt-1">
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("Index", "Order")" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-list-check"></i>
                </div>
                <div class="quick-action-title">View Orders</div>
                <div class="quick-action-desc">Manage all orders</div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("Index", "MenuItem")" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-menu-button"></i>
                </div>
                <div class="quick-action-title">Manage Menu</div>
                <div class="quick-action-desc">View & edit menu items</div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("Index", "Customer")" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-person-plus"></i>
                </div>
                <div class="quick-action-title">Add Customer</div>
                <div class="quick-action-desc">Register new customer</div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("Index", "Table")" class="quick-action-card">
                <div class="quick-action-icon">
                    <i class="bi bi-diagram-3"></i>
                </div>
                <div class="quick-action-title">Table Status</div>
                <div class="quick-action-desc">View table availability</div>
            </a>
        </div>
    </div>
</div>

<!-- Recent Activity & Alerts -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="activity-card">
            <h2 class="section-title">📊 Recent Activity</h2>
            <div class="mt-4">
                @if (ViewBag.RecentActivities != null && ((List<ActivityItem>)ViewBag.RecentActivities).Any())
                {
                    foreach (var activity in (List<ActivityItem>)ViewBag.RecentActivities)
                    {
                        <div class="activity-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    @if (activity.Type == "order")
                                    {
                                        <strong class="text-dark">🆕 @activity.Title</strong>
                                    }
                                    else if (activity.Type == "payment")
                                    {
                                        <strong class="text-dark">💳 @activity.Title</strong>
                                    }
                                    else if (activity.Type == "customer")
                                    {
                                        <strong class="text-dark">👤 @activity.Title</strong>
                                    }
                                    <p class="mb-0 mt-1 text-muted">@activity.Description</p>
                                </div>
                                <span class="activity-time">@activity.TimeAgo</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <p>No recent activities</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="content-card">
            <h2 class="section-title">🔔 System Alerts</h2>
            <div class="mt-4">
                @if (ViewBag.Alerts != null && ((List<AlertItem>)ViewBag.Alerts).Any())
                {
                    foreach (var alert in (List<AlertItem>)ViewBag.Alerts)
                    {
                        var alertClass = alert.Type switch
                        {
                            "warning" => "alert-warning",
                            "info" => "alert-info",
                            "success" => "alert-success",
                            _ => "alert-secondary"
                        };

                        var iconClass = alert.Type switch
                        {
                            "warning" => "bi-exclamation-triangle-fill",
                            "info" => "bi-info-circle-fill",
                            "success" => "bi-check-circle-fill",
                            _ => "bi-bell-fill"
                        };

                        <div class="alert @alertClass d-flex align-items-start" role="alert">
                            <i class="bi @iconClass me-3 fs-3"></i>
                            <div>
                                <strong class="d-block mb-1">@alert.Title</strong>
                                <p class="mb-0">@alert.Message</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-success d-flex align-items-start" role="alert">
                        <i class="bi bi-check-circle-fill me-3 fs-3"></i>
                        <div>
                            <strong class="d-block mb-1">All Systems Normal</strong>
                            <p class="mb-0">Everything is running smoothly!</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>