@using Restaurant.BLL.DTOs.IngredientModule
@model IEnumerable<IngredientDto>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a asp-action="Create" class="btn btn-primary">Create Ingredient</a>
</div>

<br />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No ingredient</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=>e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Unit)</th>
                <th>@Html.DisplayNameFor(e => e.UnitCost)</th>
                <th>@Html.DisplayNameFor(e => e.CurrentStock)</th>
                <th>@Html.DisplayNameFor(e => e.MinStock)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>

                <!-- Add more columns if your DTO has more properties -->
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e=>ingredient.Name)</td>
                    <td>@Html.DisplayFor(e=>ingredient.Unit)</td>
                    <td>@Html.DisplayFor(e => ingredient.UnitCost)</td>

                    <td>@Html.DisplayFor(e => ingredient.CurrentStock)</td>
                    <td>@Html.DisplayFor(e => ingredient.MinStock)</td>
                    


                    <td>
                        @if (ingredient.IsActive){
                                
                            <i class="bi bi-check-circle-fill text-success"></i>
  
                        }else {
                                    <i class="bi bi-x-circle-fill text-danger"></i>
                                }
                    </td>

                        <td>
            <a asp-action="Details" asp-route-id="@ingredient.Id" class="btn btn-info btn-sm me-1">
                <i class="bi bi-eye"></i> Details
            </a>
            </td>
            <td>
            <a asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-warning btn-sm me-1">
                <i class="bi bi-pencil"></i> Edit
            </a>
                    </td>
                    <td>
            <form asp-action="Delete" asp-route-id="@ingredient.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this ingredient?');">
                    <i class="bi bi-trash"></i> Delete
                </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

