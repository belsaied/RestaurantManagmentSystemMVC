@model IngredientViewModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <partial name="PartialViews/EditCreatePartialView" model="Model" />
    <button type="submit" class="btn"
            style="background-color: #FFC107; color: #000; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 600; margin-right: 8px;">
        <i class="bi bi-save"></i> Save
    </button>
    <a asp-action="Index" class="btn"
       style="background-color: #FFC107; color: #000; border: none; padding: 10px 24px; border-radius: 8px; font-weight: 600;">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</form>
