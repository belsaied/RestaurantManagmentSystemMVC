@model Restaurant.PL.ViewModels.Auth_ViewModels.ResetPasswordViewModel

@{

    ViewData
[
"Title"
]
 
=
 
"Reset Password"
;

    Layout 
=
 
"~/Views/Shared/_AuthLayout.cshtml"
;

}


<style>
    .reset-container {
        max-width: 480px;
        width: 100%;
    }

    .reset-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        box-shadow: 0 30px 90px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        backdrop-filter: blur(10px);
        animation: slideUp 0.6s ease-out;
    }

    .reset-header {
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        padding: 45px 40px;
        text-align: center;
    }

    .logo-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 42px;
        color: white;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .reset-header h1 {
        color: white;
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 8px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .reset-header p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 15px;
        margin: 0;
        font-weight: 500;
    }

    .reset-body {
        padding: 40px;
    }

    .form-floating {
        margin-bottom: 20px;
        position: relative;
    }

    .form-floating input {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 16px 56px 16px 20px;
        height: 58px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: #f8f9fa;
        width: 100%;
    }

    .form-floating input:focus {
        border-color: #ff6600;
        box-shadow: 0 0 0 4px rgba(255, 102, 0, 0.1);
        background: white;
        outline: none;
    }

    .form-floating label {
        padding: 16px 56px 16px 20px;
        color: #6c757d;
        font-weight: 500;
    }

    .form-floating i.input-icon {
        position: absolute;
        right: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        font-size: 18px;
        z-index: 5;
    }

    .btn-submit {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 700;
        box-shadow: 0 8px 24px rgba(255, 102, 0, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(255, 102, 0, 0.4);
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    .back-link a {
        color: #ff6600;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
    }
</style>

<div class="reset-container">
    <div class="reset-card">
        <div class="reset-header">
            <div class="logo-icon">
                <i class="bi bi-shield-lock-fill"></i>
            </div>
            <h1>New Password</h1>
            <p>Create a strong password</p>
        </div>

        <div class="reset-body">
            <form asp-action="ResetPassword" method="post">
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <label asp-for="Password">New Password</label>
                    <i class="bi bi-lock input-icon"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <i class="bi bi-lock-fill input-icon"></i>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle me-2"></i>
                    Reset Password
                </button>
            </form>

            <div class="back-link">
                <a asp-action="Login" asp-controller="Account">
                    <i class="bi bi-arrow-left me-1"></i>
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}