@using Restaurant.PL.ViewModels.Auth_ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm" style="border-radius: 16px;">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock" style="font-size: 3rem; color: #ff7f27;"></i>
                    <h2 class="fw-bold mt-2" style="color: #ff7f27;">Reset your password</h2>
                    <p class="text-muted mb-0">Enter your new password below.</p>
                </div>
                <form asp-action="ResetPassword" method="post" autocomplete="off">
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold" style="color: #ff7f27;"></label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="New password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold" style="color: #ff7f27;"></label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn w-100 py-2 fw-bold" style="background-color: #ff7f27; color: #fff; border-radius: 8px;">
                        <i class="bi bi-arrow-repeat"></i> Reset Password
                    </button>
                </form>
                <div class="mt-4 text-center">
                    <a asp-action="Login" asp-controller="Account" style="color: #ff7f27; text-decoration: underline;">
                        <i class="bi bi-arrow-left"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

