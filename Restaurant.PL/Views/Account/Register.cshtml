@model Restaurant.PL.ViewModels.Auth_ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    .register-container {
        max-width: 600px;
        width: 100%;
    }

    .register-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        box-shadow: 0 30px 90px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        backdrop-filter: blur(10px);
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-header {
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        padding: 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .register-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.05) 10px, rgba(255, 255, 255, 0.05) 20px);
            animation: slide 20s linear infinite;
        }

    @@keyframes slide {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(50px, 50px);
        }
    }

    .logo-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 42px;
        color: white;
        position: relative;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .register-header h1 {
        color: white;
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 8px;
        position: relative;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .register-header p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 15px;
        margin: 0;
        position: relative;
        font-weight: 500;
    }

    .register-body {
        padding: 40px;
    }

    .form-floating {
        margin-bottom: 20px;
        position: relative;
    }

        .form-floating input {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 16px 56px 16px 20px;
            height: 58px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8f9fa;
            width: 100%;
        }

            .form-floating input:focus {
                border-color: #ff6600;
                box-shadow: 0 0 0 4px rgba(255, 102, 0, 0.1);
                background: white;
                outline: none;
            }

        .form-floating label {
            padding: 16px 56px 16px 20px;
            color: #6c757d;
            font-weight: 500;
        }

        .form-floating i.input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            font-size: 18px;
            z-index: 5;
            pointer-events: none;
        }

        .form-floating input:focus ~ i.input-icon {
            color: #ff6600;
        }

    .btn-register {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 700;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 24px rgba(255, 102, 0, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(255, 102, 0, 0.4);
        }

    .login-link {
        text-align: center;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
    }

        .login-link p {
            color: #6c757d;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .login-link a {
            color: #ff6600;
            text-decoration: none;
            font-weight: 700;
            font-size: 15px;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .login-link a:hover {
                background: rgba(255, 102, 0, 0.1);
                transform: translateY(-1px);
            }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 6px;
        margin-left: 4px;
        font-weight: 500;
        display: block;
    }

    .validation-summary-errors {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            color: #721c24;
            font-size: 14px;
            font-weight: 500;
        }

    @@media (max-width: 576px) {
        .register-container {
            max-width: 100%;
        }

        .register-header {
            padding: 35px 25px;
        }

            .register-header h1 {
                font-size: 26px;
            }

        .register-body {
            padding: 30px 25px;
        }
    }
</style>

<div class="register-container">
    <div class="register-card">
        <!-- Header -->
        <div class="register-header">
            <div class="logo-icon">
                <i class="bi bi-person-plus-fill"></i>
            </div>
            <h1>Create Account</h1>
            <p>Join Krusty Krab Restaurant today</p>
        </div>

        <!-- Body -->
        <div class="register-body">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="row g-3">
                    <!-- Username -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="UserName" class="form-control" placeholder="Username" />
                            <label asp-for="UserName">Username</label>
                            <i class="bi bi-person input-icon"></i>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email</label>
                            <i class="bi bi-envelope input-icon"></i>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <i class="bi bi-telephone input-icon"></i>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <label asp-for="Address">Address</label>
                            <i class="bi bi-geo-alt input-icon"></i>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <label asp-for="Password">Password</label>
                            <i class="bi bi-lock input-icon"></i>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <i class="bi bi-lock-fill input-icon"></i>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Register Button -->
                <button type="submit" class="btn-register mt-3">
                    <i class="bi bi-person-plus me-2"></i>
                    Create Account
                </button>
            </form>

            <!-- Login Link -->
            <div class="login-link">
                <p>Already have an account?</p>
                <a asp-action="Login" asp-controller="Account">
                    <i class="bi bi-box-arrow-in-right me-1"></i>
                    Sign In
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}