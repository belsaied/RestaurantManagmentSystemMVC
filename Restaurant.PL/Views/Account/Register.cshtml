@model Restaurant.PL.ViewModels.Auth_ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card لتصميم أجمل -->
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-white text-center fw-bold fs-4">
                    <i class="bi bi-person-plus"></i> Register
                </div>

                <div class="card-body bg-white">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label fw-semibold"></label>
                                <input asp-for="UserName" class="form-control border-warning" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-semibold"></label>
                                <input asp-for="Address" class="form-control border-warning" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                           

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-semibold"></label>
                                <input asp-for="Password" class="form-control border-warning" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                                <input asp-for="ConfirmPassword" class="form-control border-warning" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control border-warning" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                             <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                                <input asp-for="PhoneNumber" class="form-control border-warning" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <input type="submit" value="Create Account" class="btn btn-warning text-white fw-semibold" />
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center bg-light">
                    <a asp-action="Login" class="text-warning fw-semibold text-decoration-none">
                        Already have an account? Login
                    </a>
                </div>
            </div>

            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
