@model Restaurant.PL.ViewModels.Auth_ViewModels.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-white text-center">
                    <h3 class="mb-0">Login</h3>
                </div>

                <div class="card-body bg-light">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label fw-bold text-warning"></label>
                            <input asp-for="UserName" class="form-control border-warning" placeholder="Enter username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label fw-bold text-warning"></label>
                            <input asp-for="Password" class="form-control border-warning" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input border-warning" asp-for="RememberMe" />
                            <label class="form-check-label text-warning">
                                @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <input type="submit" value="Login" class="btn btn-warning text-white fw-bold" />
                        </div>

                        <div class="text-center">
                            <a asp-action="ForgotPassword" class="btn btn-outline-warning fw-bold">
                                Forget Password?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
