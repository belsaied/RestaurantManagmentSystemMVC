@model Restaurant.PL.ViewModels.Auth_ViewModels.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<style>
    .login-container {
        max-width: 480px;
        width: 100%;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        box-shadow: 0 30px 90px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(255, 255, 255, 0.3);
        overflow: hidden;
        backdrop-filter: blur(10px);
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-header {
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        padding: 45px 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .login-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.05) 10px, rgba(255, 255, 255, 0.05) 20px);
            animation: slide 20s linear infinite;
        }

    @@keyframes slide {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(50px, 50px);
        }
    }

    .logo-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 42px;
        color: white;
        position: relative;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .login-header h1 {
        color: white;
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 8px;
        position: relative;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .login-header p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 15px;
        margin: 0;
        position: relative;
        font-weight: 500;
    }

    .login-body {
        padding: 40px;
    }

    /* OAuth Security Badge */
    .security-badge {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border: 2px solid #bae6fd;
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .security-badge i {
            color: #0284c7;
            font-size: 24px;
        }

    .security-badge-text {
        flex: 1;
    }

        .security-badge-text strong {
            color: #0c4a6e;
            font-size: 14px;
            display: block;
            margin-bottom: 2px;
        }

        .security-badge-text span {
            color: #075985;
            font-size: 12px;
        }

    .form-floating {
        margin-bottom: 20px;
        position: relative;
    }

        .form-floating input {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 16px 56px 16px 20px;
            height: 58px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8f9fa;
            width: 100%;
        }

            .form-floating input:focus {
                border-color: #ff6600;
                box-shadow: 0 0 0 4px rgba(255, 102, 0, 0.1);
                background: white;
                outline: none;
            }

        .form-floating label {
            padding: 16px 56px 16px 20px;
            color: #6c757d;
            font-weight: 500;
        }

        .form-floating i.input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            font-size: 18px;
            z-index: 5;
            pointer-events: none;
        }

        .form-floating input:focus ~ i.input-icon {
            color: #ff6600;
        }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 24px 0;
    }

    .form-check {
        padding-left: 0;
        display: flex;
        align-items: center;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        border: 2px solid #dee2e6;
        border-radius: 6px;
        margin-right: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

        .form-check-input:checked {
            background-color: #ff6600;
            border-color: #ff6600;
        }

    .form-check-label {
        color: #495057;
        font-weight: 500;
        cursor: pointer;
        user-select: none;
        font-size: 14px;
    }

    .forgot-link {
        color: #ff6600;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
    }

        .forgot-link:hover {
            color: #ff8c00;
        }

    .btn-login {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 700;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 24px rgba(255, 102, 0, 0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(255, 102, 0, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 30px 0 25px;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 2px solid #e9ecef;
        }

        .divider span {
            padding: 0 20px;
            color: #6c757d;
            font-size: 13px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    .external-login-section {
        margin-bottom: 30px;
    }

    .external-login-btn {
        width: 100%;
        padding: 14px 20px;
        border: 2px solid #dee2e6;
        border-radius: 12px;
        background: white;
        color: #495057;
        font-size: 15px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        transition: all 0.3s ease;
        cursor: pointer;
        margin-bottom: 12px;
    }

        .external-login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
        }

        .external-login-btn.google {
            border-color: #ea4335;
            color: #ea4335;
        }

            .external-login-btn.google:hover {
                background: #ea4335;
                color: white;
                box-shadow: 0 6px 20px rgba(234, 67, 53, 0.3);
            }

                .external-login-btn.google:hover svg path {
                    fill: white;
                }

        .external-login-btn.microsoft {
            border-color: #00a4ef;
            color: #00a4ef;
        }

            .external-login-btn.microsoft:hover {
                background: #00a4ef;
                color: white;
                box-shadow: 0 6px 20px rgba(0, 164, 239, 0.3);
            }

                .external-login-btn.microsoft:hover svg path {
                    fill: white;
                }

        .external-login-btn svg {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
        }

    .register-link {
        text-align: center;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
    }

        .register-link p {
            color: #6c757d;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .register-link a {
            color: #ff6600;
            text-decoration: none;
            font-weight: 700;
            font-size: 15px;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .register-link a:hover {
                background: rgba(255, 102, 0, 0.1);
                transform: translateY(-1px);
            }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 6px;
        margin-left: 4px;
        font-weight: 500;
        display: block;
    }

    .validation-summary-errors {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            color: #721c24;
            font-size: 14px;
            font-weight: 500;
        }

    @@media (max-width: 576px) {
        .login-container {
            max-width: 100%;
        }

        .login-header {
            padding: 35px 25px;
        }

            .login-header h1 {
                font-size: 26px;
            }

        .login-body {
            padding: 30px 25px;
        }

        .security-badge {
            flex-direction: column;
            text-align: center;
        }

        .form-options {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <!-- Header -->
        <div class="login-header">
            <div class="logo-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1>Secure Login</h1>
            <p>Access your Krusty Krab account</p>
        </div>

        <!-- Body -->
        <div class="login-body">
            <!-- OAuth 2.0 Security Badge -->
            <div class="security-badge">
                <i class="bi bi-shield-check"></i>
                <div class="security-badge-text">
                    <strong>Protected by OAuth 2.0</strong>
                    <span>Enterprise-grade security with OpenID Connect</span>
                </div>
            </div>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <!-- Username -->
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <label asp-for="UserName">Username</label>
                    <i class="bi bi-person input-icon"></i>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <label asp-for="Password">Password</label>
                    <i class="bi bi-lock input-icon"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="form-options">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">
                            @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <a asp-action="ForgetPassword" class="forgot-link">
                        Forgot password?
                    </a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Sign In Securely
                </button>
            </form>

            <!-- Divider -->
            <div class="divider">
                <span>Or continue with</span>
            </div>

            <!-- External Login Providers -->
            <div class="external-login-section">
                <!-- Google Login -->
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <button type="submit" class="external-login-btn google">
                        <svg width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                        </svg>
                        Continue with Google
                    </button>
                </form>

                <!-- Microsoft Login -->
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Microsoft" />
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <button type="submit" class="external-login-btn microsoft">
                        <svg width="20" height="20" viewBox="0 0 24 24">
                            <path fill="#00a4ef" d="M11.4 24H0V12.6h11.4V24zM24 24H12.6V12.6H24V24zM11.4 11.4H0V0h11.4v11.4zm12.6 0H12.6V0H24v11.4z" />
                        </svg>
                        Continue with Microsoft
                    </button>
                </form>
            </div>

            <!-- Register Link -->
            <div class="register-link">
                <p>Don't have an account?</p>
                <a asp-action="Register" asp-controller="Account">
                    <i class="bi bi-person-plus me-1"></i>
                    Create Account
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}