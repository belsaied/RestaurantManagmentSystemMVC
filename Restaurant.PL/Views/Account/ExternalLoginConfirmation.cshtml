@model Restaurant.PL.ViewModels.Auth_ViewModels.ExternalLoginConfirmationViewModel

@{

    ViewData
[
"Title"
]
 
=
 
"Complete Registration"
;

    Layout 
=
 
"~/Views/Shared/_AuthLayout.cshtml"
;

}


<style>
    .confirmation-container {
        max-width: 550px;
        width: 100%;
    }

    .confirmation-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 24px;
        box-shadow: 0 30px 90px rgba(0, 0, 0, 0.25);
        overflow: hidden;
        backdrop-filter: blur(10px);
        animation: slideUp 0.6s ease-out;
    }

    .confirmation-header {
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        padding: 40px;
        text-align: center;
    }

    .logo-icon {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 42px;
        color: white;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .confirmation-header h1 {
        color: white;
        font-size: 28px;
        font-weight: 800;
        margin: 0 0 8px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .confirmation-header p {
        color: rgba(255, 255, 255, 0.95);
        font-size: 14px;
        margin: 0;
        font-weight: 500;
    }

    .confirmation-body {
        padding: 40px;
    }

    .provider-badge {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border: 2px solid #bae6fd;
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 25px;
        text-align: center;
    }

    .provider-badge strong {
        color: #0c4a6e;
        font-size: 15px;
    }

    .form-floating {
        margin-bottom: 20px;
        position: relative;
    }

    .form-floating input {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 16px 56px 16px 20px;
        height: 58px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: #f8f9fa;
        width: 100%;
    }

    .form-floating input:focus {
        border-color: #ff6600;
        box-shadow: 0 0 0 4px rgba(255, 102, 0, 0.1);
        background: white;
        outline: none;
    }

    .form-floating input:disabled {
        background: #e9ecef;
        cursor: not-allowed;
    }

    .form-floating label {
        padding: 16px 56px 16px 20px;
        color: #6c757d;
        font-weight: 500;
    }

    .form-floating i.input-icon {
        position: absolute;
        right: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        font-size: 18px;
        z-index: 5;
    }

    .btn-submit {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #ff6600 0%, #ff8c00 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 700;
        box-shadow: 0 8px 24px rgba(255, 102, 0, 0.3);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(255, 102, 0, 0.4);
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-header">
            <div class="logo-icon">
                <i class="bi bi-person-check-fill"></i>
            </div>
            <h1>Complete Your Profile</h1>
            <p>Just a few more details</p>
        </div>

        <div class="confirmation-body">
            <div class="provider-badge">
                <strong>✓ Successfully authenticated with @ViewData["Provider"]</strong>
            </div>

            <form asp-action="ExternalLoginConfirmation" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" readonly />
                    <label asp-for="Email">Email (verified)</label>
                    <i class="bi bi-envelope-check input-icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name">Full Name</label>
                    <i class="bi bi-person input-icon"></i>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <label asp-for="Address">Address</label>
                    <i class="bi bi-geo-alt input-icon"></i>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle me-2"></i>
                    Complete Registration
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}